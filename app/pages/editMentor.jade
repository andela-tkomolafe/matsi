		input(type="text" name="fullName" ng-model="mentorData.fullName")
		br
		br
		label(for="Email") Email
		br
		input(type="text" name="Email" ng-model="mentorData.email")
		br
		br
		input(type="checkbox" name="Agree" id="Agree" ng-model="checked" ng-click="toggleCheck()")
		br
		I agree to the Terms and Conditions of this company for mentoring
		br
		br
		label(for="title") Title
		br
		input(type="text" name="title" ng-model="mentorData.Title")
