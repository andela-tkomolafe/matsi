section.content.fellows(ng-init="findOne()")
  .container(ng-if="currentUser.uid && currentUser.uid !== fellow.uid" ng-cloak)
    h3 please edit your profile 
      a(href="fellows/{{currentUser.uid}}/edit") here
  .container(ng-if="!currentUser.uid" ng-cloak)
    h3 Please login  
  .container(ng-if="fellow.role === '-fellow-'", ng-show="currentUser.uid === fellow.uid")
    h2.light Edit Profile
    hr
    .row
      .col-xs-8.col-xs-offset-2.col-sm-3.col-sm-offset-0
        .unit-wrap
          .profile-pic
            img(src='{{fellow.picture}}')
          .user-name
            h5
              a(href='') {{fellow.fullName}}
            p.text-muted Lorem ipsum dolor sit amet
      .col-xs-12.col-sm-9
        .unit-wrap.bio
          .user-profile
            h4 Bio
            hr
            textarea.form-control(ng-model='fellow.longBio',placeholder='enter full bio here', rows ='5')
        .unit-wrap.bio
          .user-profile
            h4 Profile Details
            hr
            form(role='form')
              .form-group
                input.form-control(type='text', placeholder='Full Name', ng-model="fellow.fullName")
              .form-group
                .row
                  .col-md-7
                    label Email
                    input.form-control(type='text', placeholder='Your email address', ng-model="fellow.email")
                  .col-md-5.col-xs-12
                    br.visible-sm.visible-xs
                    label Date Joined
                    .row
                      .col-md-8
                        .input-group
                          input.form-control.ui-datepicker(type='text', data-ng-model="fellow.joinedDate", datepicker-popup='{{format}}', is-open='opened', min-date='"2014-03-01"', max-date='minDate', datepicker-options='dateOptions', date-disabled='disabled(date, mode)', close-text='Close')
                          span.input-group-btn
                            button.btn.btn-default(type='button', ng-click='open($event)')
                              i.glyphicon.glyphicon-calendar
              .form-group
                label Github Profile
                .input-group
                  .input-group-addon https://
                  input.form-control(type='text', placeholder='Please enter github username', ng-model="fellow.gitHubUrl")
              .row
                .col-md-4
                  .form-group
                    label Location
                    select.form-control(ng-model="fellow.location", placeholder='Select location')
                      option Lagos
                      option New York
                .col-md-4
                  label Rank
                  .form-group
                    input.form-control(type='text', placeholder='Rank', ng-model="fellow.andelaDeveloperRank")
                .col-md-4
                  label Smarterer Score
                  .form-group
                    input.form-control(type='text', placeholder='Score card link', ng-model="fellow.smartererScores")
        .unit-wrap.bio
          .user-profile
            h4 Plum Profile
            hr
            h5 Plum link
            input.form-control(type='text', placeholder='Plum profile link', ng-model="fellow.linkToPlum")
            .row
              .col-md-12
                hr
              .col-md-4.col-md-offset-8
                button.btn.btn-primary.btn-block(ng-click="update()") Save




