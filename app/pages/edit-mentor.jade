section.content.fellows(ng-init="findOne()")
  .container(ng-if="mentor.role === '-mentor-'")
    h2.light Edit Profile
    hr
    .row
      .col-xs-8.col-xs-offset-2.col-sm-3.col-sm-offset-0
        .unit-wrap
          .profile-pic
            img(src='{{mentor.picture}}')
          .user-name
            h5
              a(href='') {{mentor.fullName}}
            p.text-muted Lorem ipsum dolor sit amet
      .col-xs-12.col-sm-9
        .unit-wrap.bio
          .user-profile
            h4 Bio
            hr
            textarea.form-control(ng-model='mentor.longBio',placeholder='enter full bio here', rows ='5')
        .unit-wrap.bio
          .user-profile
            h4 Profile Details
            hr
            form(role='form')
              .form-group
                input.form-control(type='text', placeholder='Full Name', ng-model="mentor.fullName")
              .form-group
                .row
                  .col-md-7
                    label Email
                    input.form-control(type='text', placeholder='Your email address', ng-model="mentor.email")
                  .col-md-5.col-xs-12
                    br.visible-sm.visible-xs
                    label Date Joined
                    .row.date-input
                      .col-md-12
                        input.form-control(type='date', ng-model = 'mentor.created', min='2014-01-01')
              .form-group
                label Github Profile
                .input-group
                  .input-group-addon https://
                  input.form-control(type='text', placeholder='Github URL', ng-model="mentor.gitHubUrl")
                label LinkedIn
                .input-group
                  .input-group-addon https://
                  input.form-control(type='text', placeholder='LinkedIn URL', ng-model="mentor.linkedInUrl")
                label Twitter
                .input-group
                  .input-group-addon @
                  input.form-control(type='text', placeholder='Twitter Handle', ng-model="mentor.twitterHandle")
                label Skype
                .input-group
                  .input-group-addon #
                  input.form-control(type='text', placeholder='Skype Username', ng-model="mentor.Skype")
              .row
                .col-md-4
                  .form-group
                    label Location
                    input.form-control(type='text', ng-model="mentor.location", placeholder='Select location')
              .row
                .col-md-12
                  hr
                .col-md-4.col-md-offset-8
                  button.btn.btn-primary.btn-block(ng-click="submitMentor(mentor)") Save
